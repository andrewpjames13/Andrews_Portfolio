<%= form_for @project, :html => {:multipart => true} do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :short_description %>
  <%= f.text_field :short_description %>

  <%= f.label :long_description %>
  <%= f.text_field :long_description %>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.submit %>
<% end %>
